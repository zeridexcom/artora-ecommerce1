

<header
  class='header-v7 {% if section.settings.transparent and template contains 'index' or template contains 'home' %} header-v7--transparent {% endif %}'
>
  {% if section.settings.enable_topbar %}
    {% assign topbar_background_color = '--topbar-bg-color: ' | append: section.settings.topbar_background_color | append: ';' %}
    {% assign topbar_background_gradient = '--topbar-bg-gradient: ' | append: section.settings.topbar_background_gradient | append: ';' %}
    <div
      class='header-v7__topbar color-{{ section.settings.topbar_color_scheme }}'
      style='{{ topbar_background_color }} {{ topbar_background_gradient }}'
    >
      <xo-container {% render 'section-layout' %}>
        <xo-grid style='--xs: 2'>
          <ul role='list' class='header-v7__social list-unstyled'>
            <li>
              <a href='{{ section.settings.topbar_link_1 }}'>{{ section.settings.topbar_icon_1 }}</a>
            </li>
            <li>
              <a href='{{ section.settings.topbar_link_2 }}'>{{ section.settings.topbar_icon_2 }}</a>
            </li>
            <li>
              <a href='{{ section.settings.topbar_link_3 }}'>{{ section.settings.topbar_icon_3 }}</a>
            </li>
            <li>
              <a href='{{ section.settings.topbar_link_4 }}'>{{ section.settings.topbar_icon_4 }}</a>
            </li>
          </ul>
          <div class='header-v7__selector'>
            {% if section.settings.currency_selector %}
              <div class='header-v7__currency'>
                {% render 'currency-select' %}
              </div>
            {% endif %}
            {% if section.settings.language_selector %}
              <div class='header-v7__language'>
                {% render 'language-select' %}
              </div>
            {% endif %}
          </div>
        </xo-grid>
      </xo-container>
    </div>
  {% endif %}
  <xo-sticky
    xo-direction='{{ section.settings.sticky_type }}'
    {% if section.settings.sticky_type == 'none' %}
      xo-disabled
    {% endif %}
    style='z-index: 10000; height: unset'
  >
    <xo-animate
      xo-type='fade-up'
      {% render 'header-attr', class_name: 'header-v7__sticky' %}
    >
      {% render 'header-bg-image' %}
      <xo-container {% render 'section-layout' %}>
        <xo-grid>
          <div
            class='
              header-v7__logo {% if section.settings.menu_type == 'hamburger' %}
                header-v7__logo--center
              {% endif %}
            '
            style='
              --xs: 4; {% if section.settings.menu_type != 'hamburger' %}
                --xl: 2
              {% endif %}
            '
          >
            <a href='/' class='header-v7__logo-desktop'>
              {%- if section.settings.logo_desktop != blank -%}
                {%- assign logo_alt = section.settings.logo_desktop.alt | default: shop.name | escape -%}
                {%- assign width = section.settings.logo_desktop_width %}
                {%- assign height = section.settings.logo_desktop_width | divided_by: section.settings.logo_desktop.aspect_ratio %}
                <img
                  src='{{ section.settings.logo_desktop | image_url }}'
                  alt='{{ logo_alt }}'
                  style='width: {{ width }}px; height: {{ height }}px'
                  height='auto'
                  width='auto'
                >
              {%- else -%}
                <span class='h4 header-v7__logo-placeholder'>{{ shop.name | escape }}</span>
              {%- endif -%}
            </a>
            <a href='/' class='header-v7__logo-mobile'>
              {%- if section.settings.logo_mobile != blank -%}
                {%- assign logo_alt = section.settings.logo_mobile.alt | default: shop.name | escape -%}
                {%- assign width = section.settings.logo_mobile_width %}
                {%- assign height = section.settings.logo_mobile_width | divided_by: section.settings.logo_mobile.aspect_ratio %}
                <img
                  src='{{ section.settings.logo_mobile | image_url }}'
                  alt='{{ logo_alt }}'
                  style='width: {{ width }}px; height: {{ height }}px'
                  height='auto'
                  width='auto'
                >
              {%- else -%}
                <span class='h4 header-v7__logo-placeholder'>{{ shop.name | escape }}</span>
              {%- endif -%}
            </a>
          </div>
          {% if section.settings.menu_type == 'hamburger' %}
            <div style='--xs: 4; --order-xs: -1'>
              {% render 'menu-hamburger',
                menu: section.settings.menu,
                event_type: section.settings.event_type,
                hamburger_type: section.settings.hamburger_type,
                top: '5rem',
                submenu_color_scheme: section.settings.submenu_color_scheme,
                hamburger_drawer_color_scheme: section.settings.hamburger_drawer_color_scheme
              %}
            </div>
          {% else %}
            <div style='--xs: 4; --order-xs: -1; --xl: 8; --order-xl: 0'>
              <nav class='header-v7__navigation'>
                {% render 'menu-horizontal',
                  menu: section.settings.menu,
                  event_type: section.settings.event_type,
                  navigation_show_arrow: false,
                  navigation_padding_item: '2rem',
                  submenu_color_scheme: section.settings.submenu_color_scheme
                %}
              </nav>
              <div class='header-v7__hamburger-hidden'>
                {% render 'menu-hamburger',
                  menu: section.settings.menu,
                  event_type: section.settings.event_type,
                  hamburger_type: section.settings.hamburger_type,
                  top: '5rem',
                  submenu_color_scheme: section.settings.submenu_color_scheme,
                  hamburger_drawer_color_scheme: section.settings.hamburger_drawer_color_scheme
                %}
              </div>
            </div>
          {% endif %}
          <div
            class='header-v7__utilities'
            style='
              --xs: 4; {% if section.settings.menu_type != 'hamburger' %}
                --xl: 2
              {% endif %}
            '
          >
            <xo-tooltip xo-title='{{ 'general.search.search' | t }}' xo-placement='bottom-center' class='header-v7__icon-wrap'>
              <xo-modal-trigger xo-name='search' class='header-v7__icon header-v7__icon--search'>
                {% render 'icon', name: 'search', icon_size: '24', color: 'rgba(var(--color-foreground))' %}
              </xo-modal-trigger>
            </xo-tooltip>
            <xo-tooltip
              xo-title='{%- if customer -%}{{ 'customer.account.title' | t }}{%- else -%}{{ 'customer.login_page.title' | t }}{%- endif -%}'
              xo-placement='bottom-center'
              class='header-v7__icon-wrap header-v7__icon-wrap--desktop'
            >
              <a
                href='{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}'
                class='header-v7__icon'
              >
                {% render 'icon', name: 'account1', icon_size: '24', color: 'rgba(var(--color-foreground))' %}
              </a>
            </xo-tooltip>
            <xo-tooltip xo-title='{{ 'general.wishlist.wishlist' | t }}' xo-placement='bottom-center' class='header-v7__icon-wrap header-v7__icon-wrap--desktop'>
              <a href='/pages/wishlist' aria-label='Wishlist' title='Wishlist' class='header-v7__icon'>
                {% render 'icon', name: 'heart', icon_size: '24', color: 'rgb(var(--color-foreground))' %}
                <xo-products-fetcher-size xo-type='wishlist' class='header-v7__wishlist-count'></xo-products-fetcher-size>
              </a>
            </xo-tooltip>
            <xo-tooltip xo-title='{{ 'general.cart.cart' | t }}' xo-placement='bottom-center' class='header-v7__icon-wrap'>
              {% if settings.cart_type == 'page' %}
                <a href='{{ routes.cart_url }}' class='header-v7__icon'>
                  {% render 'icon', name: 'cart', icon_size: '24', color: 'rgba(var(--color-foreground))' %}
                  <span class='header-v7__cart-count'>
                    <xo-cart-size>{{ cart.item_count }}</xo-cart-size>
                  </span>
                </a>
              {% else %}
                <xo-modal-trigger xo-name='cart' class='header-v7__icon'>
                  {% render 'icon', name: 'cart', icon_size: '24', color: 'rgba(var(--color-foreground))' %}
                  <span class='header-v7__cart-count'>
                    <xo-cart-size>{{ cart.item_count }}</xo-cart-size>
                  </span>
                </xo-modal-trigger>
              {% endif %}
            </xo-tooltip>
          </div>
        </xo-grid>
      </xo-container>
    </xo-animate>
  </xo-sticky>
</header>

