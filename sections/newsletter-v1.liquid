

{% assign placeholder = 'newsletter.email' | t %}
{% assign button_text = 'newsletter.button_label' | t %}

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container>
    <xo-grid style='--xs:1; --md: 2; --xo-grid-col-gap: 80px' class='newsletter-v1'>
      <div class='newsletter-v1__content'>
        <xo-animate xo-cascade class='newsletter-v1__svg'>
          {% if section.settings.svg %}
            {{ section.settings.svg }}
          {% elsif section.settings.image_svg %}
            {% render 'image', image: section.settings.image_svg %}
          {% endif %}
        </xo-animate>
        <xo-animate xo-cascade class='newsletter-v1__text'>
          <h3 class='newsletter-v1__title'>
            {{ section.settings.title }}
          </h3>
          <div class='newsletter-v1__subtitle'>
            {{ section.settings.subtitle }}
          </div>
        </xo-animate>
      </div>
      <xo-animate xo-cascade class='newsletter-v1__input-wrap'>
        {%- form 'customer', id: 'ContactFooter' -%}
          <input type='hidden' name='contact[tags]' value='newsletter'>
          <div class='newsletter-v1__input-btn'>
            {% assign value = form.email %}
            {% capture attr %}
              aria-required='true'
              autocorrect='off'
              {% if form.errors %}
                autofocus
                aria-invalid='true'
                aria-describedby='ContactFooter-error'
                {% elsif form.posted_successfully? %}
                  aria-describedby='ContactFooter-success'
              {% endif %}
              required
            {% endcapture %}
            {% render 'field-input', type: 'email', name: 'contact[email]', value: value, label: placeholder, attr: attr %}
            {% assign aria_label = 'newsletter.button_label' | t %}
            {% render 'button', text: button_text, style: 'secondary', mode: section.settings.button_mode, type: 'submit', aria_label: aria_label %}
          </div>
          {% render 'newsletter-form-message', form: form %}
        {%- endform -%}
      </xo-animate>
    </xo-grid>
  </xo-container>
</section>

