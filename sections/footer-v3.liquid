

{% comment %} Add padding bottom for toolbar mobile {% endcomment %}
{% if template != 'product' %}
  {% assign pb_mobile = '--pb-mobile: 53px' %}
{% else %}
  {% assign pb_mobile = '' %}
{% endif %}

<footer {% render 'section-attr', style: pb_mobile %}>
  {%- if section.blocks.size > 0 or section.settings.newsletter_enable or section.settings.show_social and has_social_icons == true or section.settings.enable_follow_on_shop -%}
    {%- unless only_empty_brand -%}
      <div class='footer-v21__content-top'>
        <xo-container {% render 'section-layout' %}>
          <xo-grid>
            {% for block in section.blocks %}
              {% if block.type == 'logo' %}
                <div class='footer-v21__grid' style='--xs: 12; --sm: 12; --md:6; --lg: 3'>
                  <div class='footer-v21__block'>
                    {%- case block.type -%}
                        {% assign col = 0 %}
                      {%- when 'logo' -%}
                        <div class='footer-v21__block-logo'>
                          <div class='footer-v21__block-logo-phone'>
                            {% if block.settings.image != blank %}
                              {%- assign image_size_2x = block.settings.image_width | times: 2 | at_most: 5760 -%}
                              <div
                                class='footer-v21__block-logo-image'
                                style='max-width: min(100%, {{ block.settings.image_width }}px);'
                              >
                                {% render 'image', image: block.settings.image %}
                              </div>
                            {% endif %}
                          </div>
                          <div class='footer-v21__block-text'>
                            {{ block.settings.info }}
                          </div>
                          <div class='footer-v21__block-info'>
                            Address: <span>{{ block.settings.address }}</span>
                          </div>
                          <div class='footer-v21__block-info'>
                            Phone: <span>{{ block.settings.phone }}</span>
                          </div>
                          <div class='footer-v21__block-info'>
                            Email: <span>{{ block.settings.email }}</span>
                          </div>
                        </div>
                    {%- endcase -%}
                  </div>
                </div>
              {% elsif block.type == 'instagram' %}
                <div class='footer-v21__grid' style='--xs: 12; --sm: 12; --md:6 ;--lg: 3'>
                  <div class='footer-v21__block'>
                    {%- if block.settings.heading != blank -%}
                      <h2 class='footer-v21__block-heading'>{{- block.settings.heading -}}</h2>
                    {%- endif -%}
                    <xo-grid style='--xs:3; --xo-grid-col-gap: 1.4rem; --xo-grid-row-gap: 1.4rem;'>
                      {% if block.settings.instagram_img1 != blank %}
                        <a
                          href='{{block.settings.link_instagram1}}'
                          class='footer-v21__block-instagram-image'
                        >
                          <div>
                            {% render 'image', image: block.settings.instagram_img1 %}
                          </div>
                        </a>
                      {% endif %}
                      {% if block.settings.instagram_img2 != blank %}
                        <a
                          href='{{block.settings.link_instagram2}}'
                          class='footer-v21__block-instagram-image'
                        >
                          <div>
                            {% render 'image', image: block.settings.instagram_img2 %}
                          </div>
                        </a>
                      {% endif %}
                      {% if block.settings.instagram_img3 != blank %}
                        <a
                          href='{{block.settings.link_instagram3}}'
                          class='footer-v21__block-instagram-image'
                        >
                          <div>
                            {% render 'image', image: block.settings.instagram_img3 %}
                          </div>
                        </a>
                      {% endif %}
                      {% if block.settings.instagram_img4 != blank %}
                        <a
                          href='{{block.settings.link_instagram4}}'
                          class='footer-v21__block-instagram-image'
                        >
                          <div>
                            {% render 'image', image: block.settings.instagram_img4 %}
                          </div>
                        </a>
                      {% endif %}
                      {% if block.settings.instagram_img5 != blank %}
                        <a
                          href='{{block.settings.link_instagram5}}'
                          class='footer-v21__block-instagram-image'
                        >
                          <div>
                            {% render 'image', image: block.settings.instagram_img5 %}
                          </div>
                        </a>
                      {% endif %}
                      {% if block.settings.instagram_img6 != blank %}
                        <a
                          href='{{block.settings.link_instagram6   }}'
                          {%- if block.settings.link_instagram6 != '#' and block.settings.link_instagram6 != blank -%}
                            target='_blank'
                          {%- endif -%}
                          class='footer-v21__block-instagram-image'
                        >
                          <div>
                            {% render 'image', image: block.settings.instagram_img6 %}
                          </div>
                        </a>
                      {% endif %}
                    </xo-grid>
                    {%- if block.settings.show_social -%}
                      <xo-animate xo-cascade>
                        <ul role='list' class='footer-v21__social'>
                          {%- if block.settings.icon_link1 != blank and block.settings.item_icon1 != blank -%}
                            <li>
                              <a href='{{block.settings.icon_link1}}' class='footer-v21__social-link' target='_blank'>{{ block.settings.item_icon1 }}</a>
                            </li>
                          {%- endif -%}

                          {%- if block.settings.icon_link2 != blank and block.settings.item_icon2 != blank -%}
                            <li>
                              <a href='{{block.settings.icon_link2}}' class='footer-v21__social-link' target='_blank'>{{ block.settings.item_icon2 }}</a>
                            </li>
                          {%- endif -%}

                          {%- if block.settings.icon_link3 != blank and block.settings.item_icon3 != blank -%}
                            <li>
                              <a href='{{block.settings.icon_link3}}' class='footer-v21__social-link' target='_blank'>{{ block.settings.item_icon3 }}</a>
                            </li>
                          {%- endif -%}

                          {%- if block.settings.icon_link4 != blank and block.settings.item_icon4 != blank -%}
                            <li>
                              <a href='{{block.settings.icon_link4}}' class='footer-v21__social-link' target='_blank'>{{ block.settings.item_icon4 }}</a>
                            </li>
                          {%- endif -%}
                        </ul>
                      </xo-animate>
                    {%- endif -%}
                  </div>
                </div>
              {% else %}
                <div class='footer-v21__grid' style='--xs: 12; --sm: 12; --md:6;--lg: 3'>
                  <div class='footer-v21__block'>
                    {%- if block.settings.heading != blank -%}
                      <h2 class='footer-v21__block-heading'>{{- block.settings.heading -}}</h2>
                    {%- endif -%}
                    {%- case block.type -%}
                        {% assign col = 0 %}
                      {%- when 'link_list' -%}
                        {%- if block.settings.menu != blank -%}
                          <ul role='list' class='footer-v21__block-list'>
                            {%- for link in block.settings.menu.links -%}
                              <li class='footer-v21__block-list-item'>
                                <a
                                  href='{{ link.url }}'
                                >
                                  {{ link.title }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                    {%- endcase -%}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </xo-grid>
        </xo-container>
      </div>
    {%- endunless -%}
  {%- endif -%}

  {% comment %} content bottom cua theme {% endcomment %}
  <xo-container {% render 'section-layout' %}>
    <div class='footer-v21__content-bottom'>
      <xo-grid class='footer-v21__bottom'>
        <div class='footer-v21__copyright' style='--xs: 12; --md: 6; --lg: 6;'>
          {% if section.settings.copyright != blank %}
            {{- section.settings.copyright -}}
          {% else %}
            <small class='footer-v21__copyright-content'>&copy; Copyright {{ 'now' | date: '%Y' }} | {{ shop.name | link_to: routes.root_url -}}</small>
            <small class='footer-v21__copyright-content'> By <a class='footer-v21__copyright-shopilaunch' href='https://shopilaunch.com/'> ShopiLaunch.</a> </small>
            <small class='footer-v21__copyright-content footer-v21__copyright-content--black'>{{ powered_by_link }}.</small>
          {% endif %}
        </div>
        <div class='footer-v21__copyright-payment' style='--xs: 12; --md: 6; --lg: 6;'>
          {%- if section.settings.image_payment != blank -%}
            {% render 'image', image: section.settings.image_payment %}
          {%- endif -%}
        </div>
      </xo-grid>
    </div>
  </xo-container>
</footer>

