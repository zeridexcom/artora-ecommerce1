

{% capture breakpoints %}
  {% if section.settings.columns_limit >= 2 %}
    xo-breakpoints='
    {
      768: {
        perView: 2,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% else %}
    xo-breakpoints='
    {
      576: {
        perView: 1,
      },
    }
    '
  {% endif %}
{% endcapture %}

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid class='our-team-v3'>
      <div style='--xs: 12; --lg: 5' class='our-team-v3__content'>
        <xo-animate xo-cascade>
          <h2 class='our-team-v3__title'>
            {{ section.settings.title }}
          </h2>
        </xo-animate>
        <xo-animate xo-cascade class='our-team-v3__description'>
          {{ section.settings.description }}
        </xo-animate>
      </div>
      <div
        style='
          --xs: 12; --lg: 7; {% if section.settings.reverse %}
            --order-lg: -1
          {% endif %}
        '
      >
        <xo-carousel
          xo-per-view='{{ section.settings.columns_limit }}'
          xo-gap='{{ section.settings.gap }}'
          xo-speed='400'
          {% if section.settings.auto_play %}
            xo-autoplay='5000'
          {% endif %}
          {{ breakpoints }}
        >
          <xo-carousel-inner>
            <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
              {%- for block in section.blocks -%}
                <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
                  <xo-animate xo-cascade>
                    <div class='our-team-v3__image'>
                      {% render 'image', image: block.settings.image, media_aspect_ratio: '433/475' %}
                      <ul role='list' class='our-team-v3__social list-unstyled'>
                        {% if block.settings.social_icon1 != blank %}
                          <li>
                            <a href='{{ block.settings.social_link1 }}' class='our-team-v3__icon'>
                              {{ block.settings.social_icon1 }}
                            </a>
                          </li>
                        {% endif %}
                        {% if block.settings.social_icon2 != blank %}
                          <li>
                            <a href='{{ block.settings.social_link2 }}' class='our-team-v3__icon'>
                              {{ block.settings.social_icon2 }}
                            </a>
                          </li>
                        {% endif %}
                        {% if block.settings.social_icon3 != blank %}
                          <li>
                            <a href='{{ block.settings.social_link3 }}' class='our-team-v3__icon'>
                              {{ block.settings.social_icon3 }}
                            </a>
                          </li>
                        {% endif %}
                        {% if block.settings.social_icon4 != blank %}
                          <li>
                            <a href='{{ block.settings.social_link4 }}' class='our-team-v3__icon'>
                              {{ block.settings.social_icon4 }}
                            </a>
                          </li>
                        {% endif %}
                      </ul>
                    </div>
                    <div class='our-team-v3__information'>
                      <div class='our-team-v3__name'>
                        {{ block.settings.name }}
                      </div>
                      <div class='our-team-v3__position'>
                        {{ block.settings.position }}
                      </div>
                    </div>
                  </xo-animate>
                </xo-carousel-slide>
              {%- endfor -%}
            </xo-carousel-list>
          </xo-carousel-inner>
        </xo-carousel>
      </div>
    </xo-grid>
  </xo-container>
</section>

