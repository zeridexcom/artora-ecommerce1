






<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-tabs>
      <xo-list class='product-information-tabs__header'>
        {% for block in section.blocks %}
          {% if block.type == '@app' %}
            {% assign tab_title = 'customer.reviews.title' | t %}
          {% else %}
            {% assign tab_title = block.settings.header %}
          {% endif %}
          <xo-list-item>
            <xo-tabs-trigger
              xo-name='tab-{{ block.id }}'
              class='product-information-tabs__trigger'
              {% if forloop.index == 1 %}
                xo-active
              {% endif %}
            >
              {{- tab_title -}}
            </xo-tabs-trigger>
          </xo-list-item>
        {% endfor %}
        <xo-list-trigger xo-portal-class='product-information-tabs__portal'>
          <div class='product-information-tabs__toggle'>+</div>
        </xo-list-trigger>
      </xo-list>
      <xo-tabs-content>
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'description' %}
              <xo-tabs-pane xo-name='tab-{{ block.id }}'
                ><xo-animate xo-type='fade-up'>{{ product.description }}</xo-animate></xo-tabs-pane
              >
            {% when 'shipping' %}
              {% assign policy_content = shop.policies | where: 'title', 'Shipping policy' | first %}
              <xo-tabs-pane xo-name='tab-{{ block.id }}'
                ><xo-animate xo-type='fade-up'>{{ policy_content.body }}</xo-animate></xo-tabs-pane
              >
            {% when 'content' %}
              {% if block.settings.content_page.content != blank %}
                <xo-tabs-pane xo-name='tab-{{ block.id }}'
                  ><xo-animate xo-type='fade-up'>{{ block.settings.content_page.content }}</xo-animate></xo-tabs-pane
                >
              {% else %}
                <xo-tabs-pane xo-name='tab-{{ block.id }}'
                  ><xo-animate xo-type='fade-up'>{{ block.settings.content_text }}</xo-animate></xo-tabs-pane
                >
              {% endif %}
            {% when 'liquid' %}
              <xo-tabs-pane xo-name='tab-{{ block.id }}'
                ><xo-animate xo-type='fade-up'>{{ block.settings.custom_liquid }}</xo-animate></xo-tabs-pane
              >
            {% when '@app' %}
              <xo-tabs-pane xo-name='tab-{{ block.id }}'
                ><xo-animate xo-type='fade-up'>
                  {% render block %}
                </xo-animate>
              </xo-tabs-pane>
          {% endcase %}
        {% endfor %}
      </xo-tabs-content>
    </xo-tabs>
  </xo-container>
</div>

