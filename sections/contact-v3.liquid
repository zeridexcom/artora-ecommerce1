

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-animate xo-cascade class='contact-v3__map'>
    {%- if section.settings.map_style == 'map' -%}
      {{ section.settings.map_iframe }}
    {%- else -%}
      <a href='{{ section.settings.map_link }}'>
        {% render 'image', image: section.settings.map_image %}
      </a>
    {%- endif -%}
  </xo-animate>
  <xo-container {% render 'section-layout' %}>
    <xo-grid class='contact-v3__main' style='--xs: 1; --md: 2'>
      <div class='contact-v3__information'>
        <xo-animate xo-cascade>
          <h5 class='contact-v3__title'>{{ section.settings.title_information }}</h5>
        </xo-animate>
        <xo-animate xo-cascade class='contact-v3__description'>
          {{ section.settings.description }}
        </xo-animate>
        <xo-grid class='contact-v3__info-wrap'>
          {%- for block in section.blocks -%}
            <xo-animate xo-cascade style='--xs: 12;' class='contact-v3__item'>
              <div class='contact-v3__icon'>
                {% if block.settings.icon != empty %}
                  {{ block.settings.icon }}
                {% elsif block.settings.image_icon != empty %}
                  {% render 'image', image: block.settings.image_icon %}
                {% endif %}
              </div>
              <div>
                <div class='contact-v3__item-title'>
                  {{ block.settings.title }}
                </div>
                <div class='contact-v3__item-content'>
                  {{ block.settings.content }}
                </div>
              </div>
            </xo-animate>
          {%- endfor -%}
        </xo-grid>
      </div>
      <div>
        <xo-animate xo-cascade>
          <h5 class='contact-v3__title'>
            {{ section.settings.title_form }}
          </h5>
        </xo-animate>
        {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}
          {% if form.posted_successfully? %}
            {% assign message = 'templates.contact.form.post_success' | t %}
            {% render 'form-success', form: form, message: message %}
          {% else %}
            {% assign message = 'templates.contact.form.error_heading' | t %}
            {% render 'form-error', form: form, message: message %}
          {% endif %}
          <xo-grid class='contact-v3__input-wrap'>
            <xo-animate xo-cascade style='--xs: 12;' class='contact-v3__input'>
              {%- assign name_placeholder = 'templates.contact.form.your_name' | t -%}
              {% render 'field-input', type: 'text', name: 'contact[name]', value: form.name, label: name_placeholder %}
            </xo-animate>
            <xo-animate xo-cascade style='--xs: 12;' class='contact-v3__input'>
              {%- assign email_placeholder = 'templates.contact.form.your_email' | t -%}
              {% render 'field-input', type: 'email', name: 'contact[email]', value: form.email, label: email_placeholder %}
            </xo-animate>
            <xo-animate xo-cascade style='--xs: 12;' class='contact-v3__textarea'>
              {%- assign message_placeholder = 'templates.contact.form.your_message' | t -%}
              {% render 'field-textarea', name: 'contact[comment]', value: form.body, label: message_placeholder %}
            </xo-animate>
            <xo-animate xo-cascade style='--xs: 12;' class='contact-v3__btn'>
              {% render 'button', text: section.settings.button_text, class: 'contact-form-v2', style: 'secondary', mode: 'dark', type: 'submit', size: 'sm' %}
            </xo-animate>
          </xo-grid>
        {%- endform -%}
      </div>
    </xo-grid>
  </xo-container>
</section>

