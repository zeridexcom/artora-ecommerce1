

{% comment %} Add padding bottom for toolbar mobile {% endcomment %}
{% if template != 'product' %}
  {% assign pb_mobile = '--pb-mobile: 53px' %}
{% else %}
  {% assign pb_mobile = '' %}
{% endif %}

<footer {% render 'section-attr', style: pb_mobile %}>
  <xo-container {% render 'section-layout' %}>
    <div class='footer-v2'>
      {%- if section.blocks.size > 0
        or section.settings.newsletter_enable
        or section.settings.show_social
        and has_social_icons == true
        or section.settings.enable_follow_on_shop
      -%}
        {%- unless only_empty_brand -%}
          <div class='footer-v2__top'>
            <xo-grid>
              {% for block in section.blocks %}
                {% if block.type == 'logo' %}
                  <div style='--xs: 12; --sm: 12; --md:8; --lg: 3'>
                    <div class='footer-v2__block'>
                      {%- if block.settings.heading != blank -%}
                        <h2 class='footer-v2__heading'>{{- block.settings.heading -}}</h2>
                      {%- endif -%}
                      {%- case block.type -%}
                          {% assign col = 0 %}
                        {%- when 'logo' -%}
                          <div class='footer-v2__logo'>
                            <div class='footer-v2__logo-phone'>
                              {% if block.settings.image != blank %}
                                {%- assign image_size_2x = block.settings.image_width | times: 2 | at_most: 5760 -%}
                                <div
                                  class='footer-v2__logo-image'
                                  style='max-width: min(100%, {{ block.settings.image_width }}px);'
                                >
                                  {% render 'image', image: block.settings.image %}
                                </div>
                              {% endif %}
                              <div class='footer-v2__phone'>
                                <h2 class='footer-v2__phone-title'>
                                  {{ block.settings.description }}
                                </h2>
                                <div class='footer-v2__phone-num'>
                                  {{ block.settings.phone_number }}
                                </div>
                              </div>
                            </div>
                            <div class='footer-v2__address'>
                              <ul role='list'>
                                <li>{{ block.settings.address }}</li>
                                <li>{{ block.settings.email }}</li>
                                <li>{{ block.settings.fax }}</li>
                              </ul>
                            </div>
                          </div>
                      {%- endcase -%}
                    </div>
                  </div>
                {% elsif block.type == 'text' %}
                  <div style='--xs: 12; --sm: 12; --md:4 ;--lg: 3'>
                    <div class='footer-v2__block'>
                      {%- if block.settings.heading != blank -%}
                        <h2 class='footer-v2__heading'>{{- block.settings.heading -}}</h2>
                      {%- endif -%}
                      {%- case block.type -%}
                          {% assign col = 0 %}
                        {%- when 'text' -%}
                          <div>
                            <div class='footer-v2__subtext'>
                              {{ block.settings.subtext }}
                            </div>
                            {%- if block.settings.newsletter_enable -%}
                              <div class='footer-v2__block'>
                                <xo-animate xo-cascade>
                                  {%- form 'customer', id: 'ContactFooter' -%}
                                    <input type='hidden' name='contact[tags]' value='newsletter'>
                                    <div>
                                      <div class='footer-v2__field-input'>
                                        {% assign value = form.email %}
                                        {% assign label = 'newsletter.label' | t %}
                                        {% capture attr %}
                                                aria-required='true'
                                                autocorrect='off'
                                                {% if form.errors %}
                                                  autofocus
                                                  aria-invalid='true'
                                                  aria-describedby='ContactFooter-error'
                                                {% elsif form.posted_successfully? %}
                                                  aria-describedby='ContactFooter-success'
                                                {% endif %}
                                                required
                                              {% endcapture %}
                                        {% render 'field-input',
                                          type: 'email',
                                          name: 'contact[email]',
                                          placeholder: 'Your email address...',
                                          value: value,
                                          label: label,
                                          attr: attr
                                        %}
                                        <button
                                          type='submit'
                                          class='footer-v2__field-button'
                                          name='commit'
                                          id='Subscribe'
                                          aria-label='{{ 'newsletter.button_label' | t }}'
                                        >
                                          <div class='footer-v2__button-email'>
                                            {% render 'icon', class: 'footer-v2__icon-before', name: 'email', icon_size: '16', color: '#FFF' %}
                                            {% render 'icon', class: 'footer-v2__icon-after', name: 'email', icon_size: '16', color: '#FFF' %}
                                          </div>
                                        </button>
                                      </div>

                                      {%- if form.errors -%}
                                        <small class='newsletter-form__message newsletter-form__message--error' id='ContactFooter-error'>
                                          {%- render 'icon', name: 'error' -%}
                                          {{- form.errors.translated_fields.email | capitalize }}
                                          {{ form.errors.messages.email -}}
                                        </small>
                                      {%- endif -%}
                                      {%- if form.posted_successfully? -%}
                                        <h3
                                          class='newsletter-form__message newsletter-form__message--success'
                                          id='ContactFooter-success'
                                          tabindex='-1'
                                          autofocus
                                        >
                                          {% render 'icon', name: 'success' -%}
                                          {{- 'newsletter.success' | t }}
                                        </h3>
                                      {%- endif -%}
                                    </div>
                                  {%- endform -%}
                                </xo-animate>
                              </div>
                            {%- endif -%}
                            {%- if block.settings.show_social -%}
                              <xo-animate xo-cascade>
                                <ul role='list' class='footer-v2__social'>
                                  <li>
                                    <a href='{{block.settings.icon_link1}}' class='footer-v2__social-link' target='_blank'>{{ block.settings.item_icon1 }}</a>
                                  </li>
                                  <li>
                                    <a href='{{block.settings.icon_link2}}' class='footer-v2__social-link' target='_blank'>{{ block.settings.item_icon2 }}</a>
                                  </li>
                                  <li>
                                    <a href='{{block.settings.icon_link5}}' class='footer-v2__social-link' target='_blank'>{{ block.settings.item_icon3 }}</a>
                                  </li>
                                  <li>
                                    <a href='{{block.settings.icon_link4}}' class='footer-v2__social-link' target='_blank'>{{ block.settings.item_icon4 }}</a>
                                  </li>
                                </ul>
                              </xo-animate>
                            {%- endif -%}
                          </div>
                      {%- endcase -%}
                    </div>
                  </div>
                {% else %}
                  <div style='--xs: 12; --sm: 12; --md:4 ;--lg: 2'>
                    <div class='footer-v2__block'>
                      {%- if block.settings.heading != blank -%}
                        <h2 class='footer-v2__heading'>{{- block.settings.heading -}}</h2>
                      {%- endif -%}
                      {%- case block.type -%}
                          {% assign col = 0 %}
                        {%- when 'link_list' -%}
                          {%- if block.settings.menu != blank -%}
                            <ul role='list' class='footer-v2__list'>
                              {%- for link in block.settings.menu.links -%}
                                <li class='footer-v2__list-item'>
                                  <a
                                    href='{{ link.url }}'
                                  >
                                    {{ link.title }}
                                  </a>
                                </li>
                              {%- endfor -%}
                            </ul>
                          {%- endif -%}
                      {%- endcase -%}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </xo-grid>
          </div>
        {%- endunless -%}
      {%- endif -%}

      <div class='footer-v2__content-bottom'>
        <xo-grid>
          <div class='footer-v2__copyright' style='--xs: 12; --md: 6; --lg: 6;'>
            {% if section.settings.copyright != blank %}
              {{- section.settings.copyright -}}
            {% else %}
              <small class='footer-v2__copyright-content'>&copy; Copyright {{ 'now' | date: '%Y' }} | {{ shop.name | link_to: routes.root_url -}}</small>
              <small class='footer-v2__copyright-content'> By <a class='footer-v2__copyright-shopilaunch' href='https://shopilaunch.com/'> ShopiLaunch.</a> </small>
              <small class='footer-v2__copyright-content footer-v2__copyright-content--black'>{{ powered_by_link }}.</small>
            {% endif %}
          </div>
          <div class='footer-v2__copyright-payment' style='--xs: 12; --md: 6; --lg: 6;'>
            {% if section.settings.image_payment != blank %}
              {% render 'image', image: section.settings.image_payment %}
            {% endif %}
          </div>
        </xo-grid>
      </div>
    </div>
  </xo-container>
</footer>

