      "label": "t:sections.product_viewed.settings.show_navigation.label"
    },
    {
      "type": "checkbox",
      "id": "show_navigation_mobile",
      "default": false,
      "label": "t:sections.product_viewed.settings.show_navigation_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.product_viewed.settings.pagination_heading.content"
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "default": true,
      "label": "t:sections.product_viewed.settings.show_pagination.label"
    },
    {
      "type": "checkbox",
      "id": "show_pagination_mobile",
