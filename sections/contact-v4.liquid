

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid style='--xs: 1; --md: 2'>
      <div class='contact-v4__information'>
        <xo-animate xo-cascade>
          <h5 class='contact-v4__title'>{{ section.settings.title }}</h5>
        </xo-animate>
        <xo-animate xo-cascade class='contact-v4__description'>
          {{ section.settings.description }}
        </xo-animate>
        <xo-grid class='contact-v4__info-wrap'>
          {%- for block in section.blocks -%}
            <xo-animate xo-cascade style='--xs:12' class='contact-v4__item'>
              <div class='contact-v4__icon'>
                {% if block.settings.icon != empty %}
                  {{ block.settings.icon }}
                {% elsif block.settings.image_icon != empty %}
                  {% render 'image', image: block.settings.image_icon %}
                {% endif %}
              </div>
              <div>
                <div class='contact-v4__item-title'>
                  {{ block.settings.title }}
                </div>
                <div class='contact-v4__item-content'>
                  {{ block.settings.content }}
                </div>
              </div>
            </xo-animate>
          {%- endfor -%}
        </xo-grid>
      </div>
      <xo-animate
        xo-cascade
        class='contact-v4__map'
        {% if section.settings.reverse_layout %}
          style='--order-md: -1'
        {% endif %}
      >
        {%- if section.settings.map_style == 'map' -%}
          {{ section.settings.map_iframe }}
        {%- else -%}
          <a href='{{ section.settings.map_link }}'>
            {% render 'image', image: section.settings.map_image %}
          </a>
        {%- endif -%}
      </xo-animate>
    </xo-grid>
  </xo-container>
</section>

