

{% comment %} Add padding bottom for toolbar mobile {% endcomment %}
{% liquid
  assign placeholder = 'newsletter.email' | t
  assign template = template | split: '.' | first
  if template != 'product'
    assign pb_mobile = '--pb-mobile: 53px'
  else
    assign pb_mobile = ''
  endif
%}

{% comment %} Sticky add cart is hidden when reach here {% endcomment %}
<xo-sticky-hidden xo-name='sticky-addcart'></xo-sticky-hidden>
<footer {% render 'section-attr', style: pb_mobile %}>
  <div class='footer-v25__top'>
    <xo-container>
      <div class='footer-v25__top-content'>
        <xo-animate xo-cascade>
          <h2 class='footer-v25__title'>{{ section.settings.title }}</h2>
        </xo-animate>
        <xo-animate xo-cascade class='footer-v25__description'>{{ section.settings.description }}</xo-animate>
        {%- if section.settings.newsletter_enable -%}
          <xo-animate xo-cascade>
            {%- form 'customer', id: 'ContactFooter' -%}
              <input type='hidden' name='contact[tags]' value='newsletter'>
              <div class='footer-v25__input-btn'>
                {% assign value = form.email %}
                {% capture attr %}
                      aria-required='true'
                      autocorrect='off'
                      {% if form.errors %}
                        autofocus
                        aria-invalid='true'
                        aria-describedby='ContactFooter-error'
                      {% elsif form.posted_successfully? %}
                        aria-describedby='ContactFooter-success'
                      {% endif %}
                      required
                    {% endcapture %}
                {% render 'field-input', type: 'email', name: 'contact[email]', value: value, placeholder: placeholder, attr: attr %}
                <button
                  type='submit'
                  class='footer-v25__email-button'
                  name='commit'
                  id='Subscribe'
                  aria-label='{{ 'newsletter.button_label' | t }}'
                >
                  <span class='footer-v25__text-before'>
                    {{ 'newsletter.submit' | t }}
                  </span>
                  <span class='footer-v25__text-after'>
                    {{ 'newsletter.submit' | t }}
                  </span>
                </button>
              </div>
              {% render 'newsletter-form-message', form: form %}
            {%- endform -%}
          </xo-animate>
        {%- endif -%}
      </div>
    </xo-container>
  </div>
  <xo-container {% render 'section-layout' %}>
    <xo-grid style='--xs: 1; --lg: 3' class='footer-v25__bottom'>
      <div class='footer-v25__left'>
        <div class='footer-v25__copyright'>
          {% if section.settings.copyright != blank %}
            {{- section.settings.copyright -}}
          {% else %}
            <small class='footer-v25__copyright-content'>&copy; Copyright {{ 'now' | date: '%Y' }} | {{ shop.name | link_to: routes.root_url -}}</small>
            <small class='footer-v25__copyright-content'> By <a class='footer-v25__copyright-shopilaunch' href='https://shopilaunch.com/'> ShopiLaunch.</a> </small>
            <small class='footer-v25__copyright-content footer-v25__copyright-content--black'>{{ powered_by_link }}.</small>
          {% endif %}
        </div>
      </div>
      <div class='footer-v25__center'>
        <div class='footer-v25__menu-list'>
          {%- if section.settings.menu != blank -%}
            <ul role='list' class='list-unstyled footer-v25__list'>
              {%- for link in section.settings.menu.links -%}
                <li class='footer-v25__list-item'>
                  <a
                    href='{{ link.url }}'
                  >
                    {{ link.title }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      </div>
      <div class='footer-v25__right'>
        {%- if section.settings.show_social -%}
          <ul role='list' class='footer-v25__social list-unstyled'>
            <li>
              <a href='{{section.settings.social_link1}}' class='footer-v25__social-link' target='_blank'>{{ section.settings.social_icon1 }}</a>
            </li>
            <li>
              <a href='{{section.settings.social_link2}}' class='footer-v25__social-link' target='_blank'>{{ section.settings.social_icon2 }}</a>
            </li>
            <li>
              <a href='{{section.settings.social_link3}}' class='footer-v25__social-link' target='_blank'>{{ section.settings.social_icon3 }}</a>
            </li>
            <li>
              <a href='{{section.settings.social_link4}}' class='footer-v25__social-link' target='_blank'>{{ section.settings.social_icon4 }}</a>
            </li>
          </ul>
        {%- endif -%}
      </div>
    </xo-grid>
  </xo-container>
</footer>

