      "label": "t:sections.policy_v1.settings.columns-gap.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "limit",
      "min": 1,
      "max": 5,
      "step": 1,
      "label": "t:sections.policy_v1.settings.columns.label",
      "default": 3
    },
    {
