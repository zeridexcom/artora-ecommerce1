

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid style='--xs: 1;  --sm: 1; --md: 2; --lg: 4 ;--xl: {{ section.settings.limit }}; --xo-grid-col-gap: {{section.settings.gap_v2}}px ; --xo-grid-row-gap: 20px;'>
      {%- for block in section.blocks -%}
        <div class='policy-v2'>
          <div class='policy-v2__wrap'>
            <div>
              <div>
                <div class='policy-v2__svg'>
                  {% if block.settings.svg != empty %}
                    {{ block.settings.svg }}
                  {% elsif block.settings.image_svg != empty %}
                    {% render 'image', image: block.settings.image_svg %}
                  {% endif %}
                </div>
              </div>
              <div class='policy-v2__info'>
                <h4 class='policy-v2__title'>
                  {{ block.settings.title }}
                </h4>
                <div class='policy-v2__title-sub'>
                  {{ block.settings.title_sub }}
                </div>
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </xo-grid>
  </xo-container>
</section>

