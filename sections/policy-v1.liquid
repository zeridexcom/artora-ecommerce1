  ],
  "blocks": [
    {
      "name": "Items box ",
      "type": "items-box",
      "settings": [
        {
          "type": "html",
          "id": "svg",
          "label": "t:sections.policy_v1.settings.svg.label"
        },
        {
          "type": "image_picker",
          "id": "image_svg",
