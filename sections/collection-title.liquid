

<section {% render 'section-attr', style: '--pt-mobile:50px; --pb-mobile:50px;' %}>
  {% render 'section-bg-image' %}
  <div class='collection-title'>
    <xo-animate xo-cascade>
      <h2 class='collection-title__title'>{{ collection.title | escape }}</h2>
    </xo-animate>
    <xo-animate xo-cascade>
      {% render 'breadcrumb' %}
    </xo-animate>
    {%- case section.settings.style -%}
      {%- when 'style2' -%}
        {% render 'collection-title-style2' %}
      {%- when 'style4' -%}
        {% render 'collection-title-style4' %}
      {%- when 'style5' -%}
        {% render 'collection-title-style5' %}
    {%- endcase -%}
  </div>
</section>
{% if section.settings.style == 'style3' %}
  {% render 'collection-title-style3' %}
{% endif %}

