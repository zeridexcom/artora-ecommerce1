

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-animate xo-cascade>
      <h2 class='about-v3__title'>
        {{ section.settings.title }}
      </h2>
    </xo-animate>
    <xo-animate xo-cascade class='about-v3__description'>
      {{ section.settings.description }}
    </xo-animate>
    <xo-animate xo-cascade>
      {% render 'button',
        text: section.settings.button_text,
        link: section.settings.button_link,
        mode: section.settings.button_mode,
        style: section.settings.button_style,
        size: section.settings.button_size,
        radius: section.settings.button_radius,
        padding: section.settings.button_padding
      %}
    </xo-animate>
    <xo-animate class='about-v3__video' xo-cascade>
      <div class=' {%- render 'hover-style' %}'>
        {%- render 'image', image: section.settings.image, media_aspect_ratio: '1360/765' -%}
      </div>
      <xo-modal-trigger xo-name='about-v3-video' class='about-v3__button-play'>
        <div class='about-v3__icon-play'></div>
      </xo-modal-trigger>
      <xo-modal xo-name='about-v3-video' xo-portal xo-animate='zoom' class='about-v3__modal'>
        <xo-modal-trigger class='about-v3__button-close' aria-label='{{ 'accessibility.close' | t }}'>
          {% render 'icon', name: 'close2', icon_size: '15' %}
        </xo-modal-trigger>
        {%- if section.settings.video != blank -%}
          {% render 'video', video: section.settings.video, autoplay: false %}
        {%- else -%}
          {% render 'video', video_url: section.settings.video_url, autoplay: false %}
        {%- endif -%}
      </xo-modal>
    </xo-animate>
  </xo-container>
</section>

