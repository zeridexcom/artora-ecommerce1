<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-animate xo-type='{{section.settings.breadcrumb_animation }}' xo-strength='5'>
    <xo-container {% render 'section-layout' %}>
      {% render 'breadcrumb', style: 'normal' %}
    </xo-container>
  </xo-animate>
</div>

