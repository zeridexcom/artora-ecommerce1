


<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    {% case section.settings.blog_layout %}
      {% when 'left_sidebar' %}
        {% assign sidebar_style = '--order-lg: -1' %}
        {% assign mainblog_columns = '9' %}
      {% when 'right_sidebar' %}
        {% assign sidebar_style = '--order-lg: 0' %}
        {% assign mainblog_columns = '9' %}
      {% else %}
        {% assign sidebar_style = 'display: none' %}
        {% assign mainblog_columns = '12' %}
    {% endcase %}
    <xo-grid>
      <div style='--xs: 12; --md: 12; --lg: {{ mainblog_columns }}'>
        {% if section.settings.article_loadtype == 'paginate' %}
          {%- paginate blog.articles by section.settings.articles_per_page -%}
            {% case section.settings.blog_style %}
              {% when 'list' %}
                <div class='main-blog__list-layout'>
                  {%- for article in blog.articles -%}
                    {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                    {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                    {% render 'article-card-style4',
                      article: article,
                      media_aspect_ratio: '4/3',
                      show_image: section.settings.article_card_show_image,
                      show_date: section.settings.article_card_show_date,
                      show_excerpt: section.settings.article_card_show_excerpt,
                      placeholder_image: placeholder_image,
                      color_scheme: section.settings.article_card_color_scheme
                    %}
                  {% endfor %}
                </div>
              {% when 'masonry' %}
                <xo-masonry
                  xo-column='{{ section.settings.columns_desktop }}'
                  xo-breakpoints='
                    {
                      575: {
                        column: 1
                      },
                      768: {
                        column: {{ section.settings.columns_desktop | minus: 1 }}
                      }
                    }
                  '
                >
                  {%- for article in blog.articles -%}
                    {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                    {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                    <xo-masonry-item class='masonry__item'>
                      {% render 'article-card-style1',
                        article: article,
                        show_image: section.settings.article_card_show_image,
                        show_date: section.settings.article_card_show_date,
                        show_excerpt: section.settings.article_card_show_excerpt,
                        placeholder_image: placeholder_image,
                        color_scheme: section.settings.article_card_color_scheme
                      %}
                    </xo-masonry-item>
                  {% endfor %}
                </xo-masonry>
              {% else %}
                <xo-grid style='--lg: {{ section.settings.columns_desktop }}; --md: {{ section.settings.columns_desktop | minus: 1 }}; --xs: 1;'>
                  {%- for article in blog.articles -%}
                    {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                    {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                    {% render 'article-card-style1',
                      article: article,
                      media_aspect_ratio: '4/3',
                      show_image: section.settings.article_card_show_image,
                      show_date: section.settings.article_card_show_date,
                      show_excerpt: section.settings.article_card_show_excerpt,
                      placeholder_image: placeholder_image,
                      color_scheme: section.settings.article_card_color_scheme
                    %}
                  {% endfor %}
                </xo-grid>
            {% endcase %}
            {%- render 'pagination', paginate: paginate -%}
          {%- endpaginate -%}
        {% else %}
          {% case section.settings.blog_style %}
            {% when 'list' %}
              <div class='main-blog__list-layout'>
                {%- for article in blog.articles -%}
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                  {% render 'article-card-style4',
                    article: article,
                    media_aspect_ratio: '4/3',
                    show_image: section.settings.article_card_show_image,
                    show_date: section.settings.article_card_show_date,
                    show_excerpt: section.settings.article_card_show_excerpt,
                    placeholder_image: placeholder_image,
                    color_scheme: section.settings.article_card_color_scheme
                  %}
                {% endfor %}
              </div>
            {% when 'masonry' %}
              <xo-masonry
                xo-column='{{ section.settings.columns_desktop }}'
                xo-breakpoints='
                  {
                    575: {
                      column: 1
                    },
                    768: {
                      column: {{ section.settings.columns_desktop | minus: 1 }}
                    }
                  }
                '
              >
                {%- for article in blog.articles -%}
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                  <xo-masonry-item class='masonry__item'>
                    {% render 'article-card-style1',
                      article: article,
                      show_image: section.settings.article_card_show_image,
                      show_date: section.settings.article_card_show_date,
                      show_excerpt: section.settings.article_card_show_excerpt,
                      placeholder_image: placeholder_image,
                      color_scheme: section.settings.article_card_color_scheme
                    %}
                  </xo-masonry-item>
                {% endfor %}
              </xo-masonry>
            {% else %}
              <xo-grid style='--lg: {{ section.settings.columns_desktop }}; --md: {{ section.settings.columns_desktop | minus: 1 }}; --xs: 1;'>
                {%- for article in blog.articles -%}
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                  {% render 'article-card-style1',
                    article: article,
                    media_aspect_ratio: '4/3',
                    show_image: section.settings.article_card_show_image,
                    show_date: section.settings.article_card_show_date,
                    show_excerpt: section.settings.article_card_show_excerpt,
                    placeholder_image: placeholder_image,
                    color_scheme: section.settings.article_card_color_scheme
                  %}
                {% endfor %}
              </xo-grid>
          {% endcase %}
        {% endif %}
      </div>
      <div style='--xs: 12; --md: 12; --lg: 3; {{ sidebar_style }}'>
        <div class='main-blog__sidebar-wrap'>
          {% if section.settings.enable_category %}
            <div class='main-blog__category'>
              <xo-animate xo-cascade>
                <h2 class='main-blog__title'>{{ section.settings.category_title }}</h2>
              </xo-animate>
              <ul role='list' class='main-blog__category-list'>
                {% for link in section.settings.category.links %}
                  <xo-animate xo-cascade>
                    <li class='main-blog__category-item'>{{ link.title | escape | link_to: link.url }}</li>
                  </xo-animate>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          {% if section.settings.enable_post %}
            <div class='main-blog__post'>
              <xo-animate xo-cascade>
                <h2 class='main-blog__title'>{{ section.settings.post_title }}</h2>
              </xo-animate>
              {% for article in section.settings.post.articles limit: section.settings.post_limit %}
                {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                {% render 'article-card-style3', article: article, media_aspect_ratio: '1/1', show_image: true, show_date: true, placeholder_image: placeholder_image %}
              {% endfor %}
            </div>
          {% endif %}
          {% if section.settings.enable_tag %}
            {% assign unique_tag = blog.all_tags | uniq %}
            <div class='main-blog__tag'>
              <xo-animate xo-cascade>
                <h2 class='main-blog__title'>{{ section.settings.tag_title }}</h2>
              </xo-animate>
              <ul role='list' class='main-blog__tag-list'>
                {% for tag in unique_tag %}
                  <xo-animate xo-cascade>
                    {%- if current_tags contains tag -%}
                      <li class='main-blog__tag-item xo-active'>{{ tag }}</li>
                    {%- else -%}
                      <li class='main-blog__tag-item'>{{ tag | link_to_tag: tag }}</li>
                    {%- endif -%}
                  </xo-animate>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          {% if section.settings.enable_banner %}
            <xo-animate xo-cascade class='main-blog__banner'>
              <a
                href='
                  {%- if section.settings.banner_link != blank -%}
                    {{section.settings.banner_link}} {%- else -%}
                    https://shopify.pxf.io/9gPaY0
                  {%- endif -%}
                '
              >
                {%- if section.settings.banner_image != blank -%}
                  {% render 'image', image: section.settings.banner_image %}
                {%- else -%}
                  <img src='https://landing.shopilaunch.com/starter/sidebar_banner.jpg' width='1200' height='800' alt='affiliate' is='xo-lazyload' loading='lazy'>
                {%- endif -%}
              </a>
            </xo-animate>
          {% endif %}
        </div>
      </div>
    </xo-grid>
  </xo-container>
</div>

