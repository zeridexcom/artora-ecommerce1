

<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    {% render 'section-heading', title: section.settings.heading_title, align: section.settings.heading_align %}
    <xo-carousel
      xo-per-view='{{section.settings.columns_desktop}}'
      class='related-article__carousel'
      xo-render-bullet='<span class="carousel-pagination-style1__bullet"></span>'
      xo-breakpoints='
        {
          575: {
            perView: 1
          },
          768: {
            perView: 2
          },
          992: {
            perView: {{ section.settings.columns_desktop | minus: 1 }}
          }
        }
      '
    >
      <xo-carousel-inner>
        <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
          {%- for article in section.settings.blog.articles -%}
            {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
            {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
            <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
              {% render 'article-card-style1',
                article: article,
                media_aspect_ratio: '4/3',
                show_image: section.settings.article_card_show_image,
                show_date: section.settings.article_card_show_date,
                show_excerpt: section.settings.article_card_show_excerpt,
                placeholder_image: placeholder_image,
                color_scheme: section.settings.article_card_color_scheme
              %}
            </xo-carousel-slide>
          {%- endfor -%}
        </xo-carousel-list>
      </xo-carousel-inner>
      {% render 'carousel-navigation-style1', display_navigation_desktop: 'flex', display_navigation_mobile: 'none' %}
      {% render 'carousel-pagination-style3', class: 'related-article__pagination' %}
    </xo-carousel>
  </xo-container>
</div>

