

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-grid class='contact-v1__grid' style='--xs: 1; --md: 2'>
      <div class='contact-v1__wrap'>
        <xo-animate xo-cascade>
          <h3 class='contact-v1__title'>
            {{ section.settings.title }}
          </h3>
        </xo-animate>
        <xo-animate xo-cascade class='contact-v1__content'>
          {{ section.settings.content }}
        </xo-animate>
        <xo-animate xo-cascade class='contact-v1__btn'>
          {%- assign mail_link = 'mailto:' | append: section.settings.mail -%}
          {% render 'button', style: 'link', mode: 'dark', link: mail_link, text: section.settings.mail %}
        </xo-animate>
        <div class='contact-v1__social'>
          <xo-animate xo-cascade>
            <h3 class='contact-v1__title'>
              {{ section.settings.social_title }}
            </h3>
          </xo-animate>
          <xo-animate xo-cascade class='contact-v1__icon-wrap'>
            <a href='{{ section.settings.social_link1 }}' class='contact-v1__icon' target='_blank'>{{ section.settings.social_icon1 }}</a>
            <a href='{{ section.settings.social_link2 }}' class='contact-v1__icon' target='_blank'>{{ section.settings.social_icon2 }}</a>
            <a href='{{ section.settings.social_link3 }}' class='contact-v1__icon' target='_blank'>{{ section.settings.social_icon3 }}</a>
            <a href='{{ section.settings.social_link4 }}' class='contact-v1__icon' target='_blank'>{{ section.settings.social_icon4 }}</a>
          </xo-animate>
        </div>
      </div>
      <xo-animate
        xo-cascade
        class='contact-v1__map'
        {% if section.settings.reverse_layout %}
          style='--order-md: -1'
        {% endif %}
      >
        {%- if section.settings.map_style == 'map' -%}
          {{ section.settings.map_iframe }}
        {%- else -%}
          <a href='{{ section.settings.map_link }}'>
            {% render 'image', image: section.settings.map_image %}
          </a>
        {%- endif -%}
      </xo-animate>
    </xo-grid>
  </xo-container>
</section>

