

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-animate xo-cascade>
      <h3 class='contact-v5__title'>
        {{ section.settings.title }}
      </h3>
    </xo-animate>
    {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}
      {% if form.posted_successfully? %}
        {% assign message = 'templates.contact.form.post_success' | t %}
        {% render 'form-success', form: form, message: message %}
      {% else %}
        {% assign message = 'templates.contact.form.error_heading' | t %}
        {% render 'form-error', form: form, message: message %}
      {% endif %}
      <xo-grid class='contact-v5__wrap'>
        <xo-animate xo-cascade style='--xs: 12; --lg: 6;' class='contact-v5__input'>
          {%- assign name_placeholder = 'templates.contact.form.your_name' | t -%}
          {% render 'field-input', type: 'text', name: 'contact[name]', value: form.name, label: name_placeholder %}
        </xo-animate>
        <xo-animate xo-cascade style='--xs: 12; --lg: 6;' class='contact-v5__input'>
          {%- assign email_placeholder = 'templates.contact.form.your_email' | t -%}
          {% render 'field-input', type: 'email', name: 'contact[email]', value: form.email, label: email_placeholder %}
        </xo-animate>
        <xo-animate xo-cascade style='--xs: 12' class='contact-v5__textarea'>
          {%- assign message_placeholder = 'templates.contact.form.your_message' | t -%}
          {% render 'field-textarea', name: 'contact[comment]', value: form.body, label: message_placeholder %}
        </xo-animate>
        <xo-animate xo-cascade style='--xs: 12' class='contact-v5__btn'>
          {% render 'button', text: section.settings.button_text, style: 'secondary', mode: 'dark', type: 'submit', size: 'sm' %}
        </xo-animate>
      </xo-grid>
    {%- endform -%}
  </xo-container>
</section>

