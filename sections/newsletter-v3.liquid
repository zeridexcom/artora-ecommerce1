

{% assign placeholder = 'newsletter.email' | t %}
{% assign button_text = 'newsletter.button_label' | t %}

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <div class='newsletter-v4'>
    <xo-container {% render 'section-layout' %}>
      <xo-grid>
        <div style='--xs: 12; --lg: 7' class='newsletter-v4__content'>
          <div class='newsletter-v4__logo'>
            <xo-animate xo-cascade class='newsletter-v4__svg'>
              {{ section.settings.svg }}
            </xo-animate>
            <xo-animate xo-cascade>
              <h2 class='newsletter-v4__title'>{{ section.settings.title }}</h2>
            </xo-animate>
          </div>
          <xo-animate xo-cascade class='newsletter-v4__subtitle'>{{ section.settings.subtitle }}</xo-animate>
        </div>
        <xo-animate xo-cascade class='newsletter-v4__input-wrap' style='--xs: 12; --lg: 5'>
          {%- form 'customer', id: 'ContactFooter' -%}
            <input type='hidden' name='contact[tags]' value='newsletter'>
            <div class='newsletter-v4__input-btn'>
              {% assign value = form.email %}
              {% capture attr %}
                aria-required='true'
                autocorrect='off'
                {% if form.errors %}
                  autofocus
                  aria-invalid='true'
                  aria-describedby='ContactNewsletter-error'
                {% elsif form.posted_successfully? %}
                  aria-describedby='ContactNewsletter-success'
                {% endif %}
                  required
                {% endcapture %}
              {% render 'field-input', type: 'email', name: 'contact[email]', value: value, label: placeholder, attr: attr %}
              {% assign aria_label = 'newsletter.button_label' | t %}
              {% render 'button', text: button_text, style: 'secondary', mode: section.settings.button_mode, type: 'submit', aria_label: aria_label %}
            </div>
            {% render 'newsletter-form-message', form: form %}
          {%- endform -%}
        </xo-animate>
      </xo-grid>
    </xo-container>
  </div>
</section>

