

<div {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    <xo-carousel
      xo-breakpoints='
        {
          500: {
            perView: 1,
          },
          700: {
            perView: 3,
          },
          1000: {
            perView: 4,
          },
          1200: {
            perView: 5,
          },
        }
      '
      {% if section.settings.autoplay %}
        xo-autoplay='3000'
      {% endif %}
      xo-per-view='{{ section.settings.columns_carousel }}'
      xo-speed='400'
      xo-loop
      xo-hover-pause
      xo-gap='0'
    >
      <xo-carousel-inner class='brand-v1__inner'>
        <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
          {% for block in section.blocks %}
            <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
              <a class='brand-v1__item' href='{{ block.settings.brand_link }}'>
                <div class='brand-v1__image'>
                  {% if block.settings.brand_svg != empty %}
                    {{ block.settings.brand_svg }}
                  {% elsif block.settings.image != empty %}
                    {% render 'image', image: block.settings.image %}
                  {% endif %}
                </div>
              </a>
            </xo-carousel-slide>
          {% endfor %}
        </xo-carousel-list>
      </xo-carousel-inner>
    </xo-carousel>
  </xo-container>
</div>

