

<xo-modal
  class='search'
  xo-name='search'
  xo-scroll-disabled
  xo-animate='slide-down'
  xo-placement='top-left'
  xo-autofocus
>
  {% capture content %}
    <div {% render 'section-attr' %}>
      {% render 'section-bg-image' %}
      <xo-container {% render 'section-layout' %}>
        <form action='{{ routes.search_url }}' method='get' role='search'>
          {% liquid
            assign value = search.terms | escape
            if search.performed
              assign label = 'templates.search.title' | t
            else
              assign label = 'general.search.search' | t
            endif
            %}
        {% render 'predictive-search', logo: section.settings.logo_img, logo_width: section.settings.logo_width, label: label, value: value %}
      </form>      
      </xo-container>
    </div>
  {% endcapture %}
  {% render 'modal-content', full_width: true, content: content, scroll_disabled: true, padding: 0 %}
</xo-modal>

