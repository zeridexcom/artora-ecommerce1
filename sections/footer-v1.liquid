

{% comment %} Add padding bottom for toolbar mobile {% endcomment %}
{% if template != 'product' %}
  {% assign pb_mobile = '--pb-mobile: 53px' %}
{% else %}
  {% assign pb_mobile = '' %}
{% endif %}

<footer {% render 'section-attr', style: pb_mobile %}>
  <div class='footer-v12'>
    {%- if section.blocks.size > 0 or section.settings.newsletter_enable or section.settings.show_social and has_social_icons == true or section.settings.enable_follow_on_shop -%}
      {%- unless only_empty_brand -%}
        <div class='footer-v12__content-top'>
          <xo-container {% render 'section-layout' %}>
            <xo-grid style='--xo-grid-row-gap: 0rem'>
              {% for block in section.blocks %}
                {% if block.type == 'logo' %}
                  <div class='footer-v12__grid' style='--xs: 12; --sm: 12; --md:12; --lg: 3'>
                    <div class='footer-v12__block'>
                      {%- case block.type -%}
                          {% assign col = 0 %}
                        {%- when 'logo' -%}
                          <div class='footer-v12__block-logo'>
                            <div class='footer-v12__block-logo-phone'>
                              {% if block.settings.image != blank %}
                                {%- assign image_size_2x = block.settings.image_width | times: 2 | at_most: 5760 -%}
                                <div
                                  class='footer-v12__block-logo-image'
                                  style='max-width: min(100%, {{ block.settings.image_width }}px);'
                                >
                                  {% render 'image', image: block.settings.image %}
                                </div>
                              {% endif %}
                            </div>
                            <div class='footer-v12__block-text'>
                              {{ block.settings.text }}
                            </div>
                            {%- if block.settings.newsletter_enable -%}
                              <div class='footer-v12__block-input'>
                                <xo-animate xo-cascade>
                                  {%- form 'customer', id: 'ContactFooter', class: 'footer-v12__block-form' -%}
                                    <input type='hidden' name='contact[tags]' value='newsletter'>
                                    <div>
                                      <div class='footer-v12__field-input'>
                                        {% assign value = form.email %}
                                        {% assign label = 'newsletter.label' | t %}
                                        {% capture attr %}
                                                  aria-required='true'
                                                  autocorrect='off'
                                                  {% if form.errors %}
                                                    autofocus
                                                    aria-invalid='true'
                                                    aria-describedby='ContactFooter-error'
                                                  {% elsif form.posted_successfully? %}
                                                    aria-describedby='ContactFooter-success'
                                                  {% endif %}
                                                  required
                                                {% endcapture %}
                                        {% render 'field-input', type: 'email', name: 'contact[email]',| placeholder: 'Your email address...', value: value, label: label, attr: attr %}
                                        <button
                                          type='submit'
                                          class='footer-v12__field-button'
                                          name='commit'
                                          id='Subscribe'
                                          aria-label='{{ 'newsletter.button_label' | t }}'
                                        >
                                          <div class='footer-v12__button-email'>
                                            {% render 'icon', class: 'footer-v12__icon-before', name: 'email', icon_size: '16', color: '#FFF' %}
                                            {% render 'icon', class: 'footer-v12__icon-after', name: 'email', icon_size: '16', color: '#FFF' %}
                                          </div>
                                        </button>
                                      </div>

                                      {%- if form.errors -%}
                                        <small id='ContactFooter-error' class='newsletter-form__message newsletter-form__message--error'>
                                          {%- render 'icon', name: 'error' -%}
                                          {{- form.errors.translated_fields.email | capitalize }}
                                          {{ form.errors.messages.email -}}
                                        </small>
                                      {%- endif -%}
                                      {%- if form.posted_successfully? -%}
                                        <h3
                                          class='newsletter-form__message newsletter-form__message--success'
                                          id='ContactFooter-success'
                                          tabindex='-1'
                                          autofocus
                                        >
                                          {% render 'icon', name: 'success' -%}
                                          {{- 'newsletter.success' | t }}
                                        </h3>
                                      {%- endif -%}
                                    </div>
                                  {%- endform -%}
                                </xo-animate>
                              </div>
                            {%- endif -%}
                            {%- if block.settings.show_social -%}
                              <xo-animate xo-cascade>
                                <ul role='list' class='footer-v12__social'>
                                  {%- if block.settings.icon_link1 != blank and block.settings.item_icon1 != blank -%}
                                    <li>
                                      <a href='{{block.settings.icon_link1}}' class='footer-v12__social-link' target='_blank'>{{ block.settings.item_icon1 }}</a>
                                    </li>
                                  {%- endif -%}
                                  {%- if block.settings.icon_link2 != blank and block.settings.item_icon2 != blank -%}
                                    <li>
                                      <a href='{{block.settings.icon_link2}}' class='footer-v12__social-link' target='_blank'>{{ block.settings.item_icon2 }}</a>
                                    </li>
                                  {%- endif -%}
                                  {%- if block.settings.icon_link3 != blank and block.settings.item_icon3 != blank -%}
                                    <li>
                                      <a href='{{block.settings.icon_link3}}' class='footer-v12__social-link' target='_blank'>{{ block.settings.item_icon3 }}</a>
                                    </li>
                                  {%- endif -%}
                                  {%- if block.settings.icon_link4 != blank and block.settings.item_icon4 != blank -%}
                                    <li>
                                      <a href='{{block.settings.icon_link4}}' class='footer-v12__social-link' target='_blank'>{{ block.settings.item_icon4 }}</a>
                                    </li>
                                  {%- endif -%}
                                </ul>
                              </xo-animate>
                            {%- endif -%}
                          </div>
                      {%- endcase -%}
                    </div>
                  </div>
                {% elsif block.type == 'text' %}
                  <div class='footer-v12__grid' style='--xs: 12; --sm: 12; --md:4 ;--lg: 3'>
                    <div class='footer-v12__block'>
                      {%- if block.settings.heading != blank -%}
                        <h2 class='footer-v12__block-heading'>{{- block.settings.heading -}}</h2>
                      {%- endif -%}
                      {%- case block.type -%}
                          {% assign col = 0 %}
                        {%- when 'text' -%}
                          <div class='footer-v12__block-detail-content rte'>
                            {{ block.settings.subtext }}
                          </div>
                      {%- endcase -%}
                    </div>
                  </div>
                {% else %}
                  <div class='footer-v12__grid' style='--xs: 12; --sm: 12; --md:4;--lg: 3'>
                    <div class='footer-v12__block'>
                      {%- if block.settings.heading != blank -%}
                        <h2 class='footer-v12__block-heading'>{{- block.settings.heading -}}</h2>
                      {%- endif -%}
                      {%- case block.type -%}
                          {% assign col = 0 %}
                        {%- when 'link_list' -%}
                          {%- if block.settings.menu != blank -%}
                            <ul role='list' class='footer-v12__block-list'>
                              {%- for link in block.settings.menu.links -%}
                                <li class='footer-v12__block-list-item'>
                                  <a
                                    href='{{ link.url }}'
                                  >
                                    {{ link.title }}
                                  </a>
                                </li>
                              {%- endfor -%}
                            </ul>
                          {%- endif -%}
                      {%- endcase -%}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </xo-grid>
          </xo-container>
        </div>
      {%- endunless -%}
    {%- endif -%}
    <xo-container {% render 'section-layout' %}>
      <div class='footer-v12__content-bottom'>
        <xo-grid class='footer-v12__bottom'>
          <div class='footer-v12__copyright' style='--xs: 12; --md: 6; --lg: 6;'>
            {% if section.settings.copyright != blank %}
              {{- section.settings.copyright -}}
            {% else %}
              <small class='footer-v12__copyright-content'>&copy; Copyright {{ 'now' | date: '%Y' }} | {{ shop.name | link_to: routes.root_url -}}</small>
              <small class='footer-v12__copyright-content'> By <a class='footer-v12__copyright-shopilaunch' href='https://shopilaunch.com/'> ShopiLaunch.</a> </small>
              <small class='footer-v12__copyright-content footer-v12__copyright-content--black'>{{ powered_by_link }}.</small>
            {% endif %}
          </div>
          <div class='footer-v12__copyright-payment' style='--xs: 12; --md: 6; --lg: 6;'>
            {%- if section.settings.image_payment != blank -%}
              {% render 'image', image: section.settings.image_payment %}
            {%- endif -%}
          </div>
        </xo-grid>
      </div>
    </xo-container>
  </div>
</footer>

