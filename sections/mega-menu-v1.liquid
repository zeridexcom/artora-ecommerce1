      <xo-grid class='mega-menu-v2__grid xo-scrollbar' style='--col-width: 24rem'>
        <div class='mega-menu-v2__item'>
          <a class='mega-menu-v2__img' href='{{ section.settings.link_1 }}'>
            {% render 'image', image: section.settings.image_1 %}
          </a>
          <h4>
            <a class='mega-menu-v2__link' href='{{ section.settings.link_1 }}'> {{ section.settings.title_1 }}</a>
          </h4>
        </div>
        <div class='mega-menu-v2__item'>
