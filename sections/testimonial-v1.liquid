

{% capture breakpoints %}
  {% if section.settings.columns_carousel >= 4 %}
    xo-breakpoints='
    {
      1200: {
        perView: {{ section.settings.columns_carousel | minus: 1}},
      },
      992: {
        perView: {{ section.settings.columns_carousel | minus: 2}},
      },
      768: {
        perView: 2,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% elsif section.settings.columns_carousel == 3 %}
    xo-breakpoints='
    {
      768: {
        perView: 2,
      },
      576: {
        perView: 1,
      },
    }
    '
  {% elsif section.settings.columns_carousel < 3 %}
    xo-breakpoints='
    {
      576: {
        perView: 1,
      },
    }
    '      
  {% endif %}
{% endcapture %}

<section {% render 'section-attr' %}>
  {% render 'section-bg-image' %}
  <xo-container {% render 'section-layout' %}>
    {% if section.settings.title %}
      <xo-animate xo-cascade>
        <h2 class='testimonial-v18__title'>{{ section.settings.title }}</h2>
      </xo-animate>
    {% endif %}
    <xo-carousel
      xo-per-view='{{ section.settings.columns_carousel }}'
      {% if section.settings.auto_play %}
        xo-autoplay='5000'
      {% endif %}
      xo-speed='2000'
      xo-gap='30'
      {{ breakpoints }}
    >
      <xo-carousel-inner>
        <xo-carousel-list role='list' aria-label='{{ 'general.slider.name' | t }}'>
          {% for block in section.blocks %}
            <xo-carousel-slide aria-roledescription='{{ 'sections.slideshow.slide' | t }}' aria-label='{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}'>
              <xo-animate xo-cascade class='testimonial-v18__item'>
                {%- if block.settings.stars > 0 -%}
                  <ul role='list' class='testimonial-v18__list-star'>
                    {% for i in (1..block.settings.stars) %}
                      <li>{% render 'icon', name: 'star', icon_size: '15', color: '#ffc107' %}</li>
                    {% endfor %}
                  </ul>
                {%- endif -%}
                {% if block.settings.testimonial %}
                  <div class='testimonial-v18__testimonial'>{{ block.settings.testimonial }}</div>
                {% endif %}
                <div class='testimonial-v18__customer'>
                  <div class='testimonial-v18__img'>
                    {% render 'image', image: block.settings.avatar %}
                  </div>
                  <div>
                    {% if block.settings.name %}
                      <div class='testimonial-v18__name'>{{ block.settings.name }}</div>
                    {% endif %}
                    {% if block.settings.position %}
                      <div class='testimonial-v18__position'>{{ block.settings.position }}</div>
                    {% endif %}
                  </div>
                </div>
              </xo-animate>
            </xo-carousel-slide>
          {% endfor %}
        </xo-carousel-list>
      </xo-carousel-inner>
    </xo-carousel>
  </xo-container>
</section>

